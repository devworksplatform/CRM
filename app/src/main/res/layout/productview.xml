<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="@drawable/background_center_crop"
	android:fitsSystemWindows="true">


	<LinearLayout
		android:id="@+id/rootLinear"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">


		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="1dp"
			android:layout_margin="10dp"
			app:cardCornerRadius="40dp"
			android:elevation="20dp">
			<LinearLayout
				android:id="@+id/linear1"
				android:background="#ffffff"
				android:elevation="100dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<ImageView
						android:id="@+id/imageview1"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/back"
						android:scaleType="fitCenter" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:gravity="left|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/productSecondaryNameTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Category > Product Name"
						android:textSize="16sp"
						android:textColor="#0A3D62" />
				</LinearLayout>

			</LinearLayout>

		</androidx.cardview.widget.CardView>


		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:padding="16dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<androidx.cardview.widget.CardView
					android:id="@+id/cardview1"
					android:layout_gravity="center"
					android:layout_width="match_parent"
					android:layout_height="250dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginBottom="8sp"
					android:orientation="vertical"
					app:cardElevation="10dp"
					app:cardCornerRadius="12dp">

					<ImageView
						android:id="@+id/productImageView"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:scaleType="fitCenter"
						android:src="@null" />
				</androidx.cardview.widget.CardView>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10sp"
					android:layout_marginBottom="5sp"
					android:background="@drawable/linear_layout_background_view_product1"
					android:orientation="vertical"
					android:padding="8sp">

					<TextView
						android:id="@+id/productNameTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginBottom="4dp"
						android:text="Grooming Pin Gloves New"
						android:textColor="#30476c"
						android:textSize="16sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/productIdTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginBottom="8dp"
						android:layout_weight="0"
						android:text="GRG28"
						android:textColor="#757575"
						android:textSize="14sp" />

					<LinearLayout
						android:id="@+id/mrpRateLinear"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:id="@+id/mrpLabel"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="MRP"
								android:textColor="#757575"
								android:textSize="14sp" />

							<TextView
								android:id="@+id/mrpTextView"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="₹ 210"
								android:textColor="#212121"
								android:textSize="16sp" />

						</LinearLayout>

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:id="@+id/rateLabel"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Rate"
								android:textColor="#757575"
								android:textSize="14sp" />

							<TextView
								android:id="@+id/rateTextView"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="₹ 210"
								android:textColor="#212121"
								android:textSize="16sp" />

						</LinearLayout>

					</LinearLayout>

					<LinearLayout
						android:id="@+id/gstDiscountLinear"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:id="@+id/gstLabel"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="GST"
								android:textColor="#757575"
								android:textSize="14sp" />

							<TextView
								android:id="@+id/gstTextView"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="+ 12 %"
								android:textColor="#4CAF50"
								android:textSize="16sp" />

							<TextView
								android:id="@+id/gstRsTextView"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="12 ₹"
								android:textColor="#4CAF50"
								android:textSize="16sp" />

						</LinearLayout>

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

							<TextView
								android:id="@+id/discountLabel"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Discount"
								android:textColor="#757575"
								android:textSize="14sp" />

							<TextView
								android:id="@+id/discountTextView"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="- 0 %"
								android:textColor="#F44336"
								android:textSize="16sp" />

							<TextView
								android:id="@+id/discountRsTextView"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="0 ₹"
								android:textColor="#F44336"
								android:textSize="16sp" />

						</LinearLayout>

					</LinearLayout>

					<LinearLayout
						android:id="@+id/countLinear"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:gravity="center"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center"
							android:orientation="vertical">

							<TextView
								android:id="@+id/hurryUpTextView"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Hurry up ! Last few pieces left !"
								android:textColor="#F44336"
								android:textSize="12sp" />

						</LinearLayout>


						<LinearLayout
							android:id="@+id/linear21"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

							<LinearLayout
								android:id="@+id/linear22"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:gravity="center"
								android:orientation="horizontal"
								android:padding="2dp">

								<ImageView
									android:id="@+id/minus"
									android:layout_width="0dp"
									android:layout_height="match_parent"
									android:layout_weight="1"
									android:background="?android:attr/selectableItemBackgroundBorderless"
									android:padding="6dp"
									android:scaleType="fitCenter"
									android:src="@drawable/ic_remove_grey" />

								<EditText
									android:id="@+id/edittext1"
									android:layout_width="50dp"
									android:layout_height="match_parent"
									android:background="#EEEEEE"
									android:gravity="center"
									android:maxLength="3"
									android:minWidth="30dp"
									android:text="999"
									android:textColor="#212121"
									android:textSize="17sp" />

								<ImageView
									android:id="@+id/plus"
									android:layout_width="0dp"
									android:layout_height="match_parent"
									android:layout_weight="1"
									android:background="?android:attr/selectableItemBackgroundBorderless"
									android:padding="7dp"
									android:scaleType="fitCenter"
									android:src="@drawable/ic_add_grey" />
							</LinearLayout>
						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10sp"
					android:background="@drawable/linear_layout_background_view_product2"
					android:orientation="vertical"
					android:padding="8sp">

					<TextView
						android:id="@+id/productDescriptionTextviewLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						android:text="Product Description"
						android:textColor="#30476c"
						android:textSize="16sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/productDescriptionTextView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="16dp"
						android:text="It helps to clean your pet hair easily and also gives your pets a gentle massage without hurting their skin and perfectly fits your hand . It contains soft pins that ensure a gentle massage and grooms without painful removing of fur or scratching the skin and it doesn't contain any harmful material that could cause any skin damage to your pet . It is perfect for long , short , and curlyhaired dogs , cats , horses , and other pets , grooming the hair quickly , gently , and effectively . The shedding hair sticks to the glove , making it easy to peel and throw hair away ."
						android:textColor="#757575"
						android:textSize="14sp" />
				</LinearLayout>


			</LinearLayout>

		</ScrollView>


	</LinearLayout>
</LinearLayout>